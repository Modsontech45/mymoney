{
  "name": "finance_backend",
  "version": "0.0.1",
  "description": "Finance backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "test": "echo 'No tests specified' && exit 0",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "prepare": "husky",
    "typeorm": "typeorm-ts-node-commonjs",
    "commitlint": "commitlint --edit",
    "compose": "docker compose -f docker-compose.dev.yml up -d",
    "compose:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d",
    "compose:prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "compose:down": "docker compose -f docker-compose.yml down",
    "db:seed": "ts-node src/scripts/seed.ts",
    "db:migrate": "npm run typeorm -- migration:run -d src/config/database.config.ts",
    "db:migrate:revert": "npm run typeorm -- migration:revert -d src/config/database.config.ts",
    "db:generate": "npm run typeorm -- migration:generate -d src/config/database.config.ts"
  },
  "keywords": [
    "finance",
    "backend",
    "api",
    "typescript",
    "nodejs"
  ],
  "author": "Modson Tande",
  "license": "ISC",
  "dependencies": {
    "@bull-board/api": "^6.12.0",
    "@bull-board/express": "^6.12.0",
    "@bull-board/ui": "^6.12.0",
    "bcryptjs": "^3.0.2",
    "bullmq": "^5.56.8",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.3",
    "redis": "^5.6.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.25",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.1.0",
    "@types/nodemailer": "^7.0.2",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.16",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3"
  }
}
